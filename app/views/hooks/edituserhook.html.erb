<h1>Editing used hook</h1>
<%= form_tag("/hooks/saveusage", :method => "GET") do %>
<b>Repository name:</b><br/>
<%= text_area_tag :repo_name , @repo_name, :readonly => "yes", :resize => "no" %>
<br/><b>Hook name:</b><br/>
<%= text_area_tag :hook_name , @hook_name, :readonly => "yes" %>
<br/><b>Script:</b><br/>
<%= text_area_tag :message , @myfile, :size => "100x40" %>
<br/>
<%= submit_tag("save" ) %>
<% end %>
