<h1>Listing groups</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @group.each do |f| %>
  <tr>
    <td><%= f.group_name %></td>
    <td><%= link_to 'Show', f %></td>
    <td><%= link_to 'Edit', edit_group_path(f) %></td>
    <td><%= link_to 'Destroy', f, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

